@model List<UserInfo>
@{
    ViewBag.Title = "Duyurular";
    Layout = "_Layout2";
}
<main class="text-center">
    <h1 class="h4">Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım</td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var user in Model)
            {
                var durum = user.WillAttend == true? "Katılacak" : "Katılmayacak";
                var className = user.WillAttend == true? "table-success" : "table-danger";
                if(user.WillAttend == true){
                    i++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td><a href="/meeting/details/@user.Id" class="btn btn-sm btn-primary">Detay</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılımcı Sayısı: @i</span>
        </div>
    </div>
</main>