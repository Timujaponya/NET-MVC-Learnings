@model Announcement
@{
    ViewBag.Title = "Create";
}
<div class="cart">
    <div class="cart-header">
        <h3>Create Announcement</h3>
    </div>
    <div class="cart-body mt-5">
        <form method="post" action="/Announcement/Create" novalidate>
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control mr-3 ml-3">
                <label asp-for="Content">Content</label>
                <textarea asp-for="Content" class="form-control mr-3 ml-3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
</div>